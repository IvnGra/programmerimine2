<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Manager" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Users list -->
        <ListBox Grid.Column="0" Grid.Row="0"
                 ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                 DisplayMemberPath="UserName" />

        <!-- User details -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10">
            <TextBlock Text="User Name:"/>
            <TextBox Text="{Binding SelectedUser.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox Text="{Binding SelectedUser.UserEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <CheckBox Content="Is Admin"
                      IsChecked="{Binding SelectedUser.IsAdmin, Mode=TwoWay}" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
            <Button Content="New" Width="80" Margin="5"
                    Command="{Binding NewCommand}" />
            <Button Content="Save" Width="80" Margin="5"
                    Command="{Binding SaveCommand}" />
            <Button Content="Delete" Width="80" Margin="5"
                    Command="{Binding DeleteCommand}" />
        </StackPanel>
    </Grid>
</Window>
