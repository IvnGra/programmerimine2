@model PagedResultBase
@{
    var urlTemplate = Url.Action() + "?page={0}";
    var request = ViewContext.HttpContext.Request;

    // Append additional query parameters except 'page'
    foreach (var key in request.Query.Keys)
    {
        if (key == "page") continue;
        urlTemplate += "&" + key + "=" + request.Query[key];
    }

    // Ensure Model is not null
    var currentPage = Model?.CurrentPage ?? 1;
    var totalPages = Model?.PageCount ?? 1;
    var startIndex = Math.Max(currentPage - 5, 1);
    var finishIndex = Math.Min(startIndex + 10, totalPages);
}

<div class="row">
    <div class="col-md-8 col-sm-8">
        @if (totalPages > 1)
        {
            <ul class="pagination pull-right">
                <li><a href="@urlTemplate.Replace("{0}", "1")">&laquo;</a></li>

                @for (var i = startIndex; i <= finishIndex; i++)
                {
                    if (i == currentPage)
                    {
                        <li class="active"><span>@i</span></li>
                    }
                    else
                    {
                        <li><a href="@urlTemplate.Replace("{0}", i.ToString())">@i</a></li>
                    }
                }

                <li><a href="@urlTemplate.Replace("{0}", totalPages.ToString())">&raquo;</a></li>
            </ul>
        }
    </div>
</div>
